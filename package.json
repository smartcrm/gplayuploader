{
  "name": "google-play-uploader",
  "version": "1.0.0",
  "description": "uploads apk to playstore",
  "main": "./lib/index.js",
  "bin": {
    "gpu": "./lib/cli.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "format-check": "prettier --config ./.prettierrc --check ./**/*{.ts,.js,.json,.css,.scss}",
    "format": "prettier --config ./.prettierrc --write ./**/*{.ts,.js,.json,.css,.scss}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run build"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "12.0.8",
    "nodemon": "1.19.1",
    "ts-node": "8.3.0",
    "typescript": "3.5.2",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "eslint": "5.16.0",
    "eslint-config-google": "0.13.0",
    "eslint-config-prettier": "5.0.0",
    "husky": "2.4.1"
  },
  "dependencies": {
    "googleapis": "40.0.0",
    "adbkit-apkreader": "3.1.2",
    "chalk": "2.4.2",
    "clear": "0.1.0",
    "commander": "2.20.0",
    "figlet": "1.2.3",
    "path": "0.12.7"
  }
}
